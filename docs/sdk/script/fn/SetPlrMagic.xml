    <category>Player</category>
    <version>4.6.5.0 CP</version>
    <syntax>
      <rtype>int</rtype>
      <params>
        <param>
          <type>int</type>
          <name>player</name>
          <desc>Number of the player whose list of available spells you want to change.</desc>
        </param>
        <param>
          <type>id</type>
